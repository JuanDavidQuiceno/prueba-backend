    "name": "prueba-back-end",
    "version": "1.0.0",
    "description": "undefined",
    "scripts": {
        "start:local": "npm i && cp -r ./environments/.local.env ./.env && nodemon index.ts",
        "start:dev": "npm i && cp -r ./environments/.dev.env ./.env && nodemon index.ts",
        "start:prod": "npm i && cp -r ./environments/.prod.env ./.env && nodemon index.ts",
        "build-code": "npm run lint && rm -rf dist && tsc --sourceMap false && npm run copy:docker && cp package.json dist/",
        "build:local": "npm run build-code && npm run copy:env:local",
        "build:dev": "npm run build-code && npm run copy:env:dev",
        "build:prod": "npm run build-code && npm run copy:env:prod",
        "start_docker": "npm i --production && node index.js",
        "lint": "eslint . --ext .ts",
        "copy:env:local": "mkdir -p ./dist && cp -r ./environments/.local.env ./dist/.env",
        "copy:env:dev": "mkdir -p ./dist &&  cp -r ./environments/.dev.env ./dist/.env",
        "copy:env:prod": "mkdir -p ./dist &&  cp -r ./environments/.prod.env ./dist/.env",
        "copy:docker": "mkdir -p ./dist && cp -r docker-compose.yml dist/ && cp -r Dockerfile dist/",
        "test": "export ENV=local && jest",
        "test:watch": "npm run test -- --watch"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.4",
        "@aws-sdk/client-s3": "^3.503.1",
        "@types/multer": "^1.4.11",
        "aws-sdk": "^2.1547.0",
        "multer": "^1.4.5-lts.1",
        "bcryptjs": "^2.4.3",
        "chalk": "4.1.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.18.0",
        "express-validator": "^6.14.0",
        "helmet": "^5.0.2",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.29.3",
        "mysql2": "^3.10.2",
        "sequelize": "^6.35.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/express-validator": "^3.0.0",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/moment": "^2.13.0",
        "@types/mysql": "^2.15.21",
        "@types/sequelize": "^4.28.20",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "@types/multer-s3": "^3.0.3",
        "cpy-cli": "^4.1.0",
        "del-cli": "^4.0.1",
        "eslint": "^8.18.0",
        "nodemon": "^3.1.4",
        "supertest": "^6.2.3",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}
